<header class="absolute left-0 right-0 z-50">
  <div
    class="navbar flex justify-between items-center mx-5 md:mx-28 text-white h-11 py-5 mt-5 bg-transparent"
  >
    <h1>
      <a href="/" class="font-bold text-2xl">FCO-GT</a>
    </h1>
    <ul
      class="flex flex-row items-center justify-center gap-2 font-semibold text-md"
    >
      <li>
        <a
          href="https://github.com/fco-gt/portfolio_v2"
          target="_blank"
          class="flex items-center justify-center bg-green-500/10 border-green-500 border-2 text-white font-bold py-2 px-4 rounded-full hover:bg-green-500 hover:text-white transition-colors"
        >
          Repositorio
        </a>
      </li>
    </ul>
  </div>
</header>

<script>
  let lastScroll = 0;
  let currentScroll = 0;
  let isScrolling = false;

  function handleScroll() {
    currentScroll = window.scrollY;
    const $navbar = document.querySelector(".navbar") as HTMLElement;

    if (currentScroll > lastScroll && !isScrolling) {
      isScrolling = true;
      $navbar.style.top = "-100px";
    } else {
      isScrolling = false;
      $navbar.style.top = "0";
    }

    lastScroll = currentScroll <= 0 ? 0 : currentScroll;
  }

  window.addEventListener("scroll", handleScroll);
</script>
