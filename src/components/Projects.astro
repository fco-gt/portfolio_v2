---

<section class="text-center">
  <div class="text-gradient">
    <h2 class="text-green-500/70 text-5xl mt-10 font-bold">Proyectos</h2>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 mt-11 md:mx-11 gap-2">
    {
      projects.map((project) => (
        <article class="container">
          <div class="card">
            <div class="image">
              <img src={project.image} class="object-cover w-[595px] h-52 md:h-72" />
            </div>
            <div class="pre-content">
              <h3 class="text-white font-2xl font-bold mt-2 mb-2">
                {project.name}
              </h3>
            </div>
            <div class="content">
              <div class="mt-2 text-gray-700 dark:text-gray-400 mb-2">
                {project.description}
              </div>

              <ul class="flex flex-wrap mb-2 gap-2 items-center justify-center">
                {project.tags.map((tag) => (
                  <li>
                    <span
                      class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
                    >
                      <tag.icon class="size-4" />
                      {tag.name}
                    </span>
                  </li>
                ))}
              </ul>

              <footer class="flex justify-center gap-2 mt-5">
                {project.isPrivate ? (
                  <a
                    class="flex items-center justify-center bg-green-500/10 border-green-500 border-2 text-white py-1 px-2 rounded-full hover:bg-green-500 hover:text-black transition-colors"
                    href={project.invite}
                    target="_blank"
                  >
                    Invitar
                  </a>
                ) : (
                  <>
                    <a
                      class="flex items-center justify-center bg-green-500/10 border-green-500 border-2 text-white py-1 px-2 rounded-full hover:bg-green-500 hover:text-black transition-colors"
                      href={project.url}
                      target="_blank"
                    >
                      Ver
                    </a>
                    <a
                      class="flex items-center justify-center bg-green-500/10 border-green-500 border-2 text-white py-1 px-2 rounded-full hover:bg-green-500 hover:text-black transition-colors"
                      href={project.github}
                      target="_blank"
                    >
                      CÃ³digo
                    </a>
                  </>
                )}

                {project.topgg && (
                  <a
                    class="flex items-center justify-center bg-green-500/10 border-green-500 border-2 text-white py-1 px-2 rounded-full hover:bg-green-500 hover:text-black transition-colors"
                    href={project.topgg}
                    target="_blank"
                  >
                    Top.gg
                  </a>
                )}
              </footer>
            </div>
          </div>
        </article>
      ))
    }
  </div>
</section>

<style>
  section .text-gradient {
    background: radial-gradient(hsl(100 100% 50%), hsl(200 100% 60%)) fixed;
    background: conic-gradient(
        hsl(100 100% 50%),
        hsl(200 100% 50%),
        hsl(100 100% 50%)
      )
      fixed;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-align: center;
  }

  .container {
    position: relative;
    width: auto;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 35px;
  }

  .container .card {
    position: relative;
    max-width: 357px;
    height: 215px;
    background-color: #23262d;
    margin: 30px 10px;
    padding: 20px 15px;
    display: flex;
    flex-direction: column;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.5);
    transition: 0.3s ease-in-out;
    border-radius: 17px;
    border: 1px solid green;
    box-shadow: 0 0 0 2px rgb(0, 22, 0);
  }
  .container .card:hover {
    height: 525px;
  }

  .container .card .image {
    position: relative;
    top: -50%;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
    z-index: 1;
    box-shadow: 0 0 0 1px rgb(0, 22, 0);
    border-radius: 17px;
    transition: 0.2s ease-in-out;
  }

  .container .card .image img {
    max-width: 100%;
    border-radius: 15px;
  }

  .container .card .pre-content {
    position: relative;
    top: -90px;
    padding: 10px 15px;
    text-align: center;
    z-index: 1;
    transition: 0.3s ease-in-out;
  }

  .container .card:hover .pre-content {
    color: #fff;
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 35px;
    transition-delay: 0.2s;
  }

  .container .card .content {
    position: relative;
    top: -140px;
    padding: 10px 15px;
    width: 100%;
    color: #111;
    text-align: center;
    visibility: hidden;
    opacity: 0;
    transition: 0.3s ease-in-out;
  }

  .container .card:hover .image {
    top: -100px;
    transition-delay: 0.2s;
  }

  .container .card:hover .content {
    visibility: visible;
    opacity: 1;
    transition-delay: 0.2s;
  }
</style>
